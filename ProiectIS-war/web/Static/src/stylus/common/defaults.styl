/* General Global CSS */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

body {
  font-family: Helvetica, Arial, sans-serif;
  font-size: rem(16);
  font-weight: normal;
}

.app-container {
  width: 100vw;
  height: 100vh;
  background-color: $color-1;
}

.main {
  margin-left: rem(160);
  padding: 0 rem(10);
}