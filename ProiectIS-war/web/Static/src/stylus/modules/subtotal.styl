.subtotal {
    &-container {
        margin-top: rem(50);
    }

    &__label {
        font-size: rem(18);
        text-transform: uppercase;
    }

    &__value {
        font-size: rem(18);
        text-transform: uppercase;
    }

    &__row {
        display: flex;
        justify-content: space-between;

        &:last-child {
            padding-top: rem(24);
            padding-bottom: rem(22);
            position: relative;

            &::after{
                content: '';
                display: block;
                position: absolute;
                left: 0;
                bottom: 0;
                width: 100%;
                height: rem(1);
                background-color: $color-9;
                opacity: 0.3;
            }
        }
    }
}

.discount {
    &__label {
        font-size: rem(18);
        text-transform: uppercase;
        color: $color-7;
    }

    &__value {
        font-size: rem(18);
        text-transform: uppercase;
        color: $color-7;
    }
}