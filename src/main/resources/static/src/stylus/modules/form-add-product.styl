.form-add-product {
    position: sticky;
    top: 0;
    background-color: white;
    z-index: 99;
    padding-top: rem(14);

    &__input {
        font-size: rem(16);
        padding: rem(10) 0;
        text-align: center;
        border: none;
        border-bottom: rem(1) solid $color-4;
    }

    &__wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: rem(10);
    }
}