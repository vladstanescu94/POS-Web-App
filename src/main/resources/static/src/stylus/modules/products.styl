.products {

    &__container {
        width: 100%;
        height: 78vh;
        max-height: 78vh;
        padding: rem(14) rem(18);
        background-color: white;
        box-shadow: 0 0 rem(8) 0 rgba(124, 124, 124, 45);
        overflow: hidden;
        overflow-y: scroll;
    }

    &__list {
        list-style: none;
    }
}

.product {
    display: flex;
    position: relative;
    justify-content: space-between;
    align-items: center;

    &__image {
        width: 100%;
        max-width: rem(110);
        height: 100%;
        max-height: rem(110);
        padding: rem(4);

    }

    &__data {
        overflow: hidden;
        word-wrap: break-word;
        min-width: rem(266);
    }

    &__title {
        font-size: rem(20);
        font-weight: 400;
    }

    &__code {
        font-size: rem(16);
        font-weight: 300;
        color: rgba(0, 0, 0, 0.63);
        padding-top: rem(16);
    }

    &__quantity {
        display: flex;
        justify-content: space-between;
        align-items: center;

    }

    &::after {
        content: '';
        display: block;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: rem(1);
        background-color: $color-9;
        opacity: 0.3;
    }

    &:last-child {
        &:after {
            content: none;
        }
    }
}

.price {
    &__label {
        font-size: rem(18);
        text-transform: uppercase;
        text-align: center;
    }

    &__value {
        font-size: rem(18);
        text-align: center;
        padding-top: rem(10);
    }
}

.quantity {
    &__input {
        width: 100%;
        max-width: rem(52);
        height: 100%;
        min-height: rem(40);
        text-align: center;
        font-size: rem(20);
        border: rem(1) solid $color-9;
    }
}