<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Stefan" id="createInvoiceSchema">
        <createTable tableName="invoice">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="seller_id" type="INT">
                <constraints nullable="false"
                             foreignKeyName="fk_invoice_seller_id"
                             referencedTableName="seller"
                             referencedColumnNames="id"
                />
            </column>
            <column name="coupon_id" type="INT">
                <constraints
                        foreignKeyName="fk_invoice_coupon_id"
                        referencedTableName="coupon"
                        referencedColumnNames="id"
                />
            </column>

            <column name="purchase_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="initial_price" type="DECIMAL(12, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="discounted_price" type="DECIMAL(12, 2)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet author="Stefan" id="createInvoiceItemSchema">
        <createTable tableName="invoice_item">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="invoice_id" type="INT">
                <constraints nullable="false"
                             foreignKeyName="fk_invoiceItem_invoice_id"
                             referencedTableName="invoice"
                             referencedColumnNames="id"/>
            </column>
            <column name="product_id" type="INT">
                <constraints nullable="false"
                             foreignKeyName="fk_invoiceItem_product_id"
                             referencedTableName="product"
                             referencedColumnNames="id"
                />
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>